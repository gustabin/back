<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <appenders>
      <Console name="Console" target="SYSTEM_OUT">
       <PatternLayout pattern="%p [%C{1} at %t] - %m%n"/>
      </Console>
     </appenders>
